        <activity android:name="buckero2reynolb6.student.computing.dcu.ie.countdownthegame.ResultScreen"
            android:screenOrientation="portrait"/>
        <activity android:name="buckero2reynolb6.student.computing.dcu.ie.countdownthegame.FinalScreen"
            android:screenOrientation="portrait"/>
        <activity android:name="buckero2reynolb6.student.computing.dcu.ie.countdownthegame.Player1Screen"
            android:screenOrientation="portrait"/>
        <activity android:name="buckero2reynolb6.student.computing.dcu.ie.countdownthegame.ResultScreenMultiplayer"
            android:screenOrientation="portrait"/>
        <activity android:name="buckero2reynolb6.student.computing.dcu.ie.countdownthegame.FinalScreenMultiplayer"
